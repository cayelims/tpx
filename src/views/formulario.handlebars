<div class="card">
	<div class="card-body">
		<form action="/operadoras/add" method="POST">
			<div class="form-group">
				<label for="name">Nome</label>
				<input type="text" class="form-control" id="name" name="name" placeholder="Nome da Operadora">
			</div>
			<div class="form-group">
				<label for="product_type">Tipos de Produtos</label>
				<select class="selectpicker" id="product_type" name="product_type" multiple placeholder="Select">
					<option value="Adesão">Adesão</option>
					<option value="Empresarial">Empresarial</option>
					<option value="Familiar">Familiar</option>
					<option value="Individual">Individual</option>
					<option value="P.M.E">P.M.E</option>
				</select>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6">
					<button type="submit" class="btn btn-primary btn-block">Salvar</button>
				</div>
			</div>
		</form>
	</div>
</div>